<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MARVEL CHARACTER SEARCH</title>
    <link rel="stylesheet" href="styles/main.css" />
  </head>
  <body>
    <div class="navbar">
      <form action="/search" class="form"  method="post">
        <input
          type="text"
          class="searchbar"
          name="searchbar"
          placeholder="CHARACTER NAME"
        />
        <button class="search" value="ok"></button>
      </form>
    </div>
    <div class="content">
      <% if (locals.data) { %>
        <% data.forEach((element) => { %>
           <div class="item">
              <img src="<%= element.thumbnail.path %>.<%= element.thumbnail.extension %>" alt="<%= element.id %>">
              <center><h5><%= element.name %></h5></center>
           </div>
        <% }) %>
      <% } %>
      <% if (locals.msg) { %>
       <div class="errormsg">
        <h3><%= msg %></h3>
       </div>
      <% } %>
    </div>
    <script src="index.js"></script>
  </body>
</html>
